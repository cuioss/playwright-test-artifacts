{
  "name": "@cuioss/playwright-test-artifacts",
  "version": "0.0.0",
  "description": "Playwright test artifact infrastructure - captures browser logs, network errors, and screenshots per test",
  "type": "module",
  "exports": {
    ".": "./src/index.js"
  },
  "files": [
    "src/"
  ],
  "scripts": {
    "test": "c8 --reporter=lcov --reporter=text node --test 'tests/**/*.test.js'",
    "lint": "eslint src/ tests/",
    "format:check": "prettier --check 'src/**/*.js' 'tests/**/*.js'"
  },
  "peerDependencies": {
    "@playwright/test": ">=1.40.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "c8": "^10.1.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsdoc": "^46.8.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-security": "^2.1.1",
    "eslint-plugin-sonarjs": "^3.0.6",
    "eslint-plugin-unicorn": "^52.0.0",
    "prettier": "^3.4.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cuioss/playwright-test-artifacts.git"
  },
  "license": "Apache-2.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "playwright",
    "testing",
    "artifacts",
    "logging",
    "screenshots"
  ]
}
